{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, /* Emit design-type metadata for decorated declarations in source files. */
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
  ]
}